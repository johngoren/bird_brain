    click.echo('\nApp version:')
    cmd = 'grep "versionCode" /Users/johngorenfeld/Dropbox/natureguides/Android/app/build.gradle'
    os.system(cmd)

    click.echo('\nSet up for expansion pack version:')
    cmd = 'grep -A 2 "EXPANSION_PACK_VERSION" /Users/johngorenfeld/Dropbox/natureguides/Android/app/build.gradle'
    os.system(cmd)

    click.echo('\nOn phone right now:')
    cmd = f'adb shell ls {OBB_DESTINATION_DIR}'
    os.system(cmd)

    click.echo('\n\n')

@cli.command()
def populate():
    """Sets up test assets."""
